@model BulkyBook.Models.ViewModels.ShoppingCartVm


<form method="post">
    <br />
    <div class="card shadow border-0">

        <div class="card-header bg-dark bg-gradient text-dark ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-black">
                        Shopping Cart
                    </h5>
                </div>
              
            </div>
        </div>
        <div class="card-body my-4">

            <div class="row mb-3 pb-3">

                <div class="col-md-10 offset-md-1">

                    @foreach (var item in Model.ListCart)
                    {
                        <div class="row border-bottom pb-3">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                @if (item.product?.ImageUrl != null && item.product?.ImageUrl?.Count() > 0)
                                {
                                    <img src="@item.product.ImageUrl" class="card-img-top rounded w-100" />
                                }
                                else
                                {
                                    <img src="https://placehold.co/500x600/png" class="card-img-top rounded w-100" />
                                }
                            </div>
                            <div class="col-3 col-lg-3 pt-md-3">
                                <h5 class="text-uppercase text-secondary"><strong>@item.product?.Title</strong></h5>
                                <p><small>@Html.Raw(item.product?.Description)</small></p>
                            </div>
                            <div class="col-3">
                                <div class="col-5 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        Price
                                        <span class="text-muted">&nbsp;x&nbsp;</span>Count
                                    </h6>
                                     <h6 class="fw-semibold">
                                        @item.product?.Price.ToString("c")
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.count
                                    </h6>
                                </div>
                                
                             </div>
                            <div class="col-12  col-lg-5 text-center row">                                
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-action="plus" asp-route-cartId="@item.ProductId" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-plus-square"></i>
                                        </a> &nbsp;
                                        <a asp-action="minus" asp-route-cartId="@item.ProductId" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                    </div>

                                </div>
                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                    <a asp-action="remove" asp-route-cartId="@item.ProductId" class="btn btn-danger bg-gradient py-2 ">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>

                        </div>
                    }


                </div>
            </div>
            <div class="card-footer bg-white border-0">
                <div class="row justify-content-end">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-end align-items-end">
                                <h5 class="text-dark fw-semibold text-uppercase align-content-end ml-30"> Total (USD)</h5>
                               
                                <h4 class="text-dark  mr-40">@Model.Price</h4>

                                
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-end align-items-end">
                                
                                <h3 class="text-dark  mr-4">
                                        <a asp-action="Summary" class="btn btn-primary">Summary</a>
                                    </h3>
                                
                            </li>
                        </ul>
                    </div>
                </div>
