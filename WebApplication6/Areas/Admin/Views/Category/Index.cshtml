
@model IEnumerable<BulkyBook.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Bulky View</h1>

<div class="container p-3">

    <div class="row pt-8">
        <div class = "col-4">
            <h2 class="text-primary"> Category List</h2>
        </div> 
        <div class = "col-2">
            <a   asp-controller="Category" asp-action="Create"  class= "btn btn-primary" >
                Create Category</a>
        </div> 
        <div class = "col-2" >
            <a   asp-controller="Category" asp-action="Search" asp-route-itemid="Model"   class= "btn btn-outline-secondary" >
                <i class="bi bi-search-heart-fill"></i>  Search
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%" >
<thead>
    <tr>
        <th> 
            Name
        </th>
        <th>
            Display Order
        </th>@*
        <th>
            Guid ID
        </th>*@
        <th>
            Create Date and Time
        </th>
        <th>
            
        </th>
        <th>
            
        </th>
    </tr>
</thead>
</table>

</div>
